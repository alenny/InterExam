extends layout

block content
    script(src='/js/controllers/eat.js', language='javascript')
    div(ng-controller='EatController')
        h2 All choices:
        div.list-group
            div.list-group-item(ng-repeat='restaurant in restaurants')
                h3 
                    span {{restaurant.name}}
                    button(type='button', class='btn btn-default', ng-click='removeRestaurant(restaurant._id)') Remove
                        //span(class='glyphicon glyphicon-remove') 
                        //| &nbsp;Remove                
        div.row
            h2
                span My new choice:
                input(type='text', class='form-control input-lg', ng-model='newRestaurantName')
                button(type='button', class='btn btn-default btn-lg', ng-click='addRestaurant()')
                    span(class='glyphicon glyphicon-plus') 
                    | &nbsp;Add
        div.row
            h2
                button(type='button', class='btn btn-primary btn-lg', ng-click='recommendOne()') Recommend One for Me!!
                label &nbsp;{{recommended.name}}
